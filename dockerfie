FROM python:3.9-alpine

WORKDIR /app

# Build dependencies for ARM architecture
RUN apk add --no-cache \
    gcc \
    musl-dev \
    python3-dev \
    linux-headers \
    curl

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY ccsscraper.py .

CMD ["python", "ccsscraper.py"]
